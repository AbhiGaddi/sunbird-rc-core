{

  "$schema":"http://json-schema.org/draft-07/schema",
  "type":"object",
  "properties":{
    "User":{
      "$ref":"#/definitions/User"
    }
  },
  "required":[
    "User"
  ],
  "title":"User",
  "definitions":{
    "User":{
      "$id":"#/definitions/User",
      "type":"object",
      "title":"User",
      "required":[
        "email",
        "user_name",
        "tenant_roles",
        "created_by"
      ],
      "properties":{

        "user_id":{
          "type":"string"
        },
        "user_name":{
          "type":"string"
        },
        "pin":{
          "type":"string"
        },
        "mobile":{
          "type":"string",
          "pattern": "^[0-9]{10}$"
        },
        "email":{
          "type":"string",
          "format": "email"
        },
        "masked_email": {
          "type": "string"
        },
        "masked_mobile": {
          "type": "string"
        },
        "linked_user_id":{
          "type":"string"
        },
        "tenant_roles":{
          "type":"array",
          "items":{
            "type":"object"
          }
        },
        "created_by":{
          "type":"string"
        }
      }
    }
  },
  "_osConfig":{
    "ownershipAttributes": [
      {
        "email": "/email",
        "mobile": "/mobile",
        "userId": "/email"
      }
    ],
    "uniqueIndexFields":[
      "user_id",
      "email"
    ],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt"
    ]
  }

}